import java.util.*;

public class Struktur
{
	public static void main(String[] args) {
		
   while (true) {
	 
	 System.out.println("Skriv in din summa!");
	 
	 try {
		
	 Scanner sc = new Scanner(System.in);	 
	 int k = 1;
	 int summa = 0;
	 int n = sc.nextInt();
	 int o = 0;

	 while (k <= n) {
	  summa += k;
	  k += 1;
   }
		
	 if (n + o >= 1 && n + o <= 10) {
	  System.out.println("Summa = " + summa);
           break;
   }	
		
   else {
    System.out.println("Fel, heltalet ej mellan 1 - 10");
     continue;
   }
   }
	 
    catch (InputMismatchException e) {
     System.out.println("Fel, du far endast skriva siffror!");
     continue;
   }
  }
 }		
}
